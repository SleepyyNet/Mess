{
  "manifest_version": 2,

  "name": "Mess",
  "description": "A Discord skin for messenger.com",
  "author": "Dan Bovey",
  "version": "1.0.5",
  "minimum_chrome_version": "36",
  "default_locale": "en",

  "options_page": "options.html",

  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },

  "permissions": [
    "storage",
    "*://*.messenger.com/*"
  ],

  "content_scripts": [ {
    "js": [ "js/content.js" ],
    "css": [ "css/style.css" ],
    "matches": [ "*://*.messenger.com/*"]
  }],

  "web_accessible_resources": [
      "img/*.svg",
      "img/*.png",
      "font/*.ttf"
  ]
}
